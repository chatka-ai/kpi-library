id: substitution_rate
display_name: Substitution Rate
domain: Supply Chain
category: Fulfilment
aliases: ["subs rate"]
description: Share of ordered items that were substituted at pick/pack.
grain: week
dimensions:
  - { name: week, semantic: temporal }
  - { name: region, semantic: geography }
  - { name: cfc, semantic: facility }
  - { name: sku, semantic: product }
  - { name: category, semantic: product_hierarchy }
derived_from: []
business_rules:
  substitution_flag: "is_substituted"
formula:
  expression: "SAFE_DIVIDE(SUM(CASE WHEN is_substituted THEN 1 END), COUNT(order_line_id))"
  notes: "Consider customer acceptance; some subs may be rejected."
sql:
  bigquery:
    source_table: your_project.retail_ops.order_lines
    metric_view: your_project.analytics_mv.substitution_rate_weekly
    params: ["@start_date", "@end_date"]
    query: |
      SELECT
        FORMAT_DATE('%G-W%V', order_date) AS week,
        region, cfc, sku, category,
        SAFE_DIVIDE(SUM(CASE WHEN is_substituted THEN 1 END), COUNT(order_line_id)) AS substitution_rate
      FROM `your_project.retail_ops.order_lines`
      WHERE order_date BETWEEN @start_date AND @end_date
      GROUP BY 1,2,3,4,5
tests:
  - name: bounds
    assertion: "substitution_rate BETWEEN 0 AND 1"
examples:
  business_questions:
    - "Which CFCs drive high substitution on fresh categories?"
    - "Did supplier fill improvements lower substitution?"
demo:
  seed_data: seeds/supply_chain/order_lines.sample.csv
